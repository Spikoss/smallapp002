/* pages/weixincustomer/index.wxss */

.container {
  width: 100%;
  display: flex;
}

.weixin_banner {
  width: 100%;
  height: 300rpx;
}

.weixin_box {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin: 20rpx;
}

.weixin_title {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  margin-left: 40rpx;
}

.weixin_line {
  width: 100%;
  height: 4rpx;
  background-color: #acf;
  margin-left: 40rpx;
  margin-top: 20rpx;
}

.weixin_line_gray {
  width: 100%;
  height: 10rpx;
  background-color: #f2f2f2;
}

.weixin_des {
  font-size: 12px;
  color: #ccc;
  margin-bottom: 20rpx;
}

.weixin_img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0px auto;
  height: 400px;
  width: 229px;
  margin-top: 20rpx;
}

.weixin_swiper {
  width: 100%;
  height: 420px;
}

.weixin_swiper_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: center;
}

.weixin_nextpage_icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}

.weixin_nextpage {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
